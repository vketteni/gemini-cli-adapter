{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@ai-cli-adapter/core-interface": ["./packages/core-interface/src"],
      "@ai-cli-adapter/cli-frontend": ["./packages/cli-frontend/src"],
      "@ai-cli-adapter/google-adapter": ["./packages/google-adapter/src"],
      "@ai-cli-adapter/shared-types": ["./packages/shared-types/src"]
    }
  },
  "include": ["packages/*/src/**/*", "apps/*/src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
