{
  "name": "open-cli",
  "version": "0.1.0",
  "description": "A modular, open-source version of Google's Gemini CLI.",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/core-interface",
    "packages/cli",
    "packages/gemini-cli-core-shim",
    "apps/*"
  ],
  "scripts": {
    "build": "tsc --build --verbose",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "dev": "npm run dev -w apps/gemini-cli",
    "demo": "node scripts/run-demo.js",
    "setup": "npm run build && npm run demo",
    "install-global": "./scripts/install-global.sh",
    "bundle": "node scripts/bundle-for-distribution.js",
    "prepare-release": "npm run build && npm run bundle"
  },
  "dependencies": {
    "@google/gemini-cli-core": "^0.1.13"
  },
  "devDependencies": {
    "@types/lowlight": "^0.0.7",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vketteni/open-cli.git"
  },
  "license": "MIT"
}
