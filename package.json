{
  "name": "open-cli",
  "version": "0.1.0",
  "description": "A modular, open-source version of Google's Gemini CLI.",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/interface",
    "packages/open-cli",
    "packages/gemini-adapter",
    "packages/open-core",
    "apps/*"
  ],
  "scripts": {
    "build": "tsc --build --verbose",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "dev": "npm run dev -w apps/open-cli",
    "install": "./scripts/install.sh",
    "bundle": "node scripts/bundle-for-distribution.js",
    "prepare-release": "npm run build && npm run bundle"
  },
  "dependencies": {
    "@google/gemini-cli-core": "^0.1.13"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@eslint/js": "^9.0.0",
    "@types/lowlight": "^0.0.7",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "semantic-release": "^24.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vketteni/open-cli.git"
  },
  "license": "Apache-2.0"
}
